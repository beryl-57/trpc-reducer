{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["node"],
    "baseUrl": ".",
    "lib": ["dom", "esnext"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
